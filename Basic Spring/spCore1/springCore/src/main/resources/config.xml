<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/p ">

    <context:component-scan base-package="com.spring.noXML"/>


<!--    using p schema -->

    <bean id="student1" class="classes.Student" p:studentId="22344" p:studentName="Abhijeet Kadam " p:studentAddress=" Maharashtra India" />


<!--    2nd bean created-->

    <bean id="student2" class="classes.Student">

        <property name="studentId" value="22345"/>

        <property name="studentName" value="Tamannaah Bhatia"/>

        <property name="studentAddress" value="Kolhapur maharashtra India"/>

    </bean>

</beans>


